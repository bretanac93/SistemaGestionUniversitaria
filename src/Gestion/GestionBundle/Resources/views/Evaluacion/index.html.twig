{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Evaluacion list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>Nota</th>
                <th>Actions</th>
                <th>Promedio</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('evaluacion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.tipo }}</td>
                <td>{{ entity.nota }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('evaluacion_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('evaluacion_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        
        </tbody>

    </table>

        <ul>
        <li>
            <a href="{{ path('evaluacion_new') }}">
                Create a new entry
            </a>

        </li>
        <li> 
        {% for item in evaluaciones %}
            <h3>{{ item[1] }}</h3>
        {% endfor %}
        </li>
    </ul>
    {% endblock %}
